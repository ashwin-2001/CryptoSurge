<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView android:layout_width="20dp" android:layout_height="20dp"
               android:id="@+id/back"
               android:layout_marginStart="20dp"
               android:layout_marginTop="20dp"
               android:background="@drawable/ic_baseline_arrow_back_ios_24"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:layout_width="match_parent"
                  android:text="Currency"
                  android:textAlignment="center"
                  android:textSize="20sp"
                  android:paddingVertical="30dp"
                  android:textColor="#000"
                  android:layout_height="100dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:layout_marginTop="100dp"
                      android:paddingHorizontal="20dp">
            <Button android:layout_width="270dp"
                    android:background="@drawable/gradient_button"
                    android:text="USD"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:layout_height="50dp" android:id="@+id/button_USD"
                    android:layout_marginBottom="50dp" android:layout_marginEnd="50dp"
                    android:layout_marginStart="50dp"
            />
            <Button android:layout_width="270dp"
                    android:background="@drawable/gradient_button"
                    android:text="EUR"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:layout_height="50dp" android:id="@+id/button_EUR"
                    android:layout_marginBottom="50dp" android:layout_marginEnd="52dp"
                    android:layout_marginStart="49dp"
            />
            <Button android:layout_width="270dp"
                    android:background="@drawable/gradient_button"
                    android:text="GBP"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:layout_height="50dp" android:id="@+id/button_GBP"
                    android:layout_marginBottom="50dp" android:layout_marginEnd="52dp"
                    android:layout_marginStart="49dp"
            />
            <Button android:layout_width="270dp"
                    android:background="@drawable/gradient_button"
                    android:text="JPY"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:layout_height="50dp" android:id="@+id/button_JPY"
                    android:layout_marginBottom="77dp" android:layout_marginEnd="52dp"
                    android:layout_marginStart="49dp"
            />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>