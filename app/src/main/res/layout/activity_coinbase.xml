<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".Coinbase">


    <ImageView android:layout_width="20dp" android:layout_height="20dp"
               android:id="@+id/back"
               android:background="@drawable/ic_baseline_arrow_back_ios_24" tools:layout_editor_absoluteY="16dp"
               tools:layout_editor_absoluteX="27dp" tools:ignore="MissingConstraints"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:layout_width="match_parent"
                  android:text="Coinbase"
                  android:textAlignment="center"
                  android:textSize="25sp"
                  android:paddingVertical="30dp"
                  android:textColor="#000000"
                  android:layout_height="100dp" android:textStyle="bold"/>

    <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:paddingStart="70dp"
                  android:layout_marginTop="50dp"
                      android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="50dp"
                  android:textSize="18dp"
                  android:text="             Assests"
                  android:layout_weight="2"
                  android:textColor="#000"
                  android:textAlignment="center" android:textStyle="bold"/>
        <TextView android:layout_width="wrap_content" android:layout_height="50dp"
                  android:textSize="18dp"
                  android:text="Value"
                  android:layout_weight="2"
                  android:textColor="#000"
                  android:textAlignment="center" android:textStyle="bold"/>
        <View android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="100dp"
                  android:layout_marginTop="0dp"
                  android:id="@+id/stack1"
                  android:paddingHorizontal="40dp"
    android:orientation="horizontal">
        <ImageView android:layout_width="100dp"
                   android:layout_height="70dp"
                   android:background="@drawable/bitcoin"/>
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                  android:text="Bitcoin         "
                  android:textColor="#000"
                  android:padding="25dp"
                  android:layout_weight="1"
                  />
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                  android:text="47650"
                  android:textColor="#6200FF"
                  android:padding="25dp"
                  android:layout_weight="1"
            android:id="@+id/textView_priceBtc"
        />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="100dp"
                      android:layout_marginTop="30dp"
                  android:paddingHorizontal="40dp"
                  android:id="@+id/stack2"
                      android:orientation="horizontal">
            <ImageView android:layout_width="100dp"
                       android:layout_height="70dp"
                       android:background="@drawable/dogecoin"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:text="Dogecoin"
                      android:textColor="#000"
                      android:padding="25dp"
                      android:layout_weight="1"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:text="0.17"
                      android:textColor="#6200FF"
                      android:padding="25dp"
                      android:layout_weight="1"
                android:id="@+id/textView_priceDoge"
            />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="40dp"
        android:id="@+id/stack3"
        android:orientation="horizontal">
        <ImageView android:layout_width="100dp"
            android:layout_height="70dp"
            android:background="@drawable/etherium"/>
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
            android:text="Etherium   "
            android:textColor="#000"
            android:padding="25dp"
            android:layout_weight="1"
            />
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
            android:text="4462"
            android:textColor="#6200FF"
            android:padding="25dp"
            android:layout_weight="1"
            android:id="@+id/textView_priceEth"
            />
</LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>