<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:background="@drawable/spashscreen"
                    android:alpha="0.2"/>
    <LinearLayout
            android:orientation="vertical"
            android:minHeight="650dp"
            android:layout_width="match_parent" android:layout_height="500dp">
        <TextView android:layout_width="match_parent"
                  android:text="Wallet"
                  android:textAlignment="center"
                  android:textSize="40sp"
                  android:paddingVertical="60dp"
                  android:textColor="#000"
                  android:layout_height="200dp" android:textStyle="bold"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="130dp"
                      android:orientation="horizontal"
                      android:paddingHorizontal="20dp">
            <ImageView android:layout_width="wrap_content"
                       android:background="@drawable/coinbase"
                       android:id="@+id/imageView_coinbase"
                       android:layout_weight="1"
                       android:layout_height="match_parent"/>
            <ImageView android:layout_width="wrap_content"
                       android:background="@drawable/binance"
                       android:id="@+id/imageView_binance"
                       android:layout_weight="1"
                       android:layout_height="match_parent"/>
            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/imageView_ledger"
                       android:background="@drawable/ledger"
                       android:layout_weight="1"
                       android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="130dp"
                      android:orientation="horizontal"
                      android:paddingHorizontal="20dp">
            <ImageView android:layout_width="wrap_content"
                       android:background="@drawable/nicehash"
                       android:layout_weight="1"
                       android:id="@+id/imageView_nicehash"
                       android:paddingHorizontal="20dp"
                       android:layout_height="match_parent"/>
            <ImageView android:layout_width="wrap_content"
                       android:background="@drawable/gemini"
                       android:layout_weight="1"
                       android:id="@+id/imageView_gemini"
                       android:layout_height="match_parent"/>
            <ImageView android:layout_width="wrap_content"
                       android:background="@drawable/webull"
                       android:layout_weight="1"
                       android:id="@+id/imageView_webull"
                       android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

    <Button
            android:background="@drawable/gradient_button"
            android:layout_width="250dp"
            android:textColor="#FFFFFF"
            android:text="ATM near me"
            android:textAllCaps="false"
            android:layout_height="50dp" android:id="@+id/button_atmnearme" android:layout_alignParentBottom="true"
            android:layout_marginBottom="77dp" android:layout_alignParentEnd="true" android:layout_marginEnd="112dp"
            android:layout_alignParentStart="true" android:layout_marginStart="119dp"
    />


</RelativeLayout>