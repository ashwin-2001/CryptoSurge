<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:background="@drawable/spashscreen"
                    android:alpha="0.2"/>
    <TextView android:layout_width="match_parent" android:layout_height="100dp"
              android:text="Converter"
              android:layout_marginTop="70dp"
              android:textAlignment="center"
              android:paddingVertical="10dp"
              android:textSize="40sp"
              android:textColor="#000" android:textStyle="bold"/>
    <ImageView android:layout_width="20dp" android:layout_height="20dp"
               android:id="@+id/back"
               android:layout_marginStart="20dp"
               android:layout_marginTop="20dp"
               android:background="@drawable/ic_baseline_arrow_back_ios_24" tools:layout_editor_absoluteY="16dp"
               tools:layout_editor_absoluteX="27dp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginVertical="200dp"
                  android:layout_marginTop="300dp"
                  android:layout_height="100dp">
        <TextView android:layout_width="wrap_content"
                  android:text="From:"
                  android:textSize="18sp"
                  android:layout_weight="1"
                  android:textAlignment="center"
                  android:paddingVertical="10dp"
                  android:textColor="#000"
                  android:layout_marginVertical="30dp"
                  android:layout_height="match_parent"/>
        <EditText android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:id="@+id/from_num"
                  android:background="@drawable/rect_inpbox"
                  android:minWidth="200dp"
                  android:hint="000000"
                  android:textAlignment="center"
                  android:layout_marginVertical="20dp"/>
        <TextView android:layout_width="wrap_content"
                  android:text="BTC"
                  android:id="@+id/from_currency"
                  android:paddingVertical="10dp"
                  android:textSize="18sp"
                  android:layout_weight="1"
                  android:textAlignment="center"
                  android:textColor="#000"
                  android:layout_marginVertical="30dp"
                  android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="340dp"
                  android:layout_height="100dp">
        <TextView android:layout_width="wrap_content"
                  android:text="From:"
                  android:textSize="18sp"
                  android:layout_weight="1"
                  android:textAlignment="center"
                  android:paddingVertical="10dp"
                  android:textColor="#000"
                  android:layout_marginVertical="30dp"
                  android:layout_height="match_parent"/>
        <EditText android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:background="@drawable/rect_inpbox"
                  android:id="@+id/target_num"
                  android:minWidth="200dp"
                  android:hint="000000"
                  android:textAlignment="center"
                  android:layout_marginVertical="20dp"/>
        <TextView android:layout_width="wrap_content"
                  android:text="USD"
                  android:id="@+id/target_currency"
                  android:paddingVertical="10dp"
                  android:textSize="18sp"
                  android:layout_weight="1"
                  android:textAlignment="center"
                  android:textColor="#000"
                  android:layout_marginVertical="30dp"
                  android:layout_height="match_parent"/>
    </LinearLayout>

    <Button
            android:background="@drawable/gradient_button"
            android:layout_width="250dp"
            android:textColor="#FFFFFF"
            android:text="Convert"
            android:textAllCaps="false"
            android:layout_height="50dp" android:id="@+id/button_conversion" android:layout_alignParentBottom="true"
            android:layout_marginBottom="191dp" android:layout_alignParentEnd="true" android:layout_marginEnd="102dp"
            android:layout_alignParentStart="true" android:layout_marginStart="98dp"
    />
</RelativeLayout>